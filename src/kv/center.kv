# fridgr.kv
# This Kivy file describes the layout
# @author Wilson McDade, wmcda.de

<HomeScreen>
        name: "HomeScreen"
        id: homescreen

        Label:
                font_size: '30sp'
                text:"Welcome to fridgr! fridgr is a fridge mounted\n        label maker and inventory system."
                pos_hint: {'top':1.1}

        Label:
                font_size: '30sp'
                text:"Create a label by clicking New Label on the left sidebar."
                pos_hint: {'top':1}

        Label:
                font_size: '30sp'
                text:"Start continuously scanning grocery items by\n      clicking Auto Scan on the left sidebar."
                pos_hint: {'top':.9}

<NewLabel>
        name: "NewLabel"
        id: newlabel

        FloatLayout:
    
                Spinner:
                        id: usrspinr
                        text: 'User'
                        values: ['Goose','Wilson','Saad','Dylan','Zack','Sam']
                        pos_hint: {'top':.95,'right':1}
                        size_hint: .1,.1

                Label:
                        id: previewing
                        pos_hint: {'top':1.2,'right':.9}
                        text: "Yeah"

                Label:
                        id: prod_name
                        pos_hint: {'top':1.2,'right':.8}
                        text: app.product_name

                Label:
                        id: user_name
                        pos_hint: {'top':1.2,'right':.6}
                        text: "Goose"
                
                Button:
                        text: "Scan"
                        on_press: app.scan()
                        pos_hint: {'top':.5,'right':.4}
                        size_hint:.1,.1

                Spinner:
                        id: expspinr
                        text: 'Expiry'
                        size_hint: .1,.1
                        pos_hint: {'top':.5,'right':.7}
                        values: ['1 Day','2 Days','4 Days','1 Week','2 Weeks','4 Weeks', 'Never']
                        
                Button:
                        text: "Preview"
                        pos_hint: {'top':.6,'right':1}
                        size_hint: .1,.2
                        on_press: app.btnprs("preview")


                Button:
                        text: "Print\nLabel "
                        pos_hint: {'top':.4,'right':1}
                        size_hint: .1,.2
                        on_press: app.btnprs("printlabel")


<AutoScan>
        name: "AutoScan"
        id: autoscan

        canvas:
                Color:
                        rgba: .1, .1, .1, .1
                Rectangle:
                        pos: self.pos
                        size: self.size 

        Label:
                text:"AutoScan"

<ItemLookup>
        name: "ItemLookup"

        canvas:
                Color:
                        rgba: .5, .5, .5, .5
                Rectangle:
                        pos: self.pos
                        size: self.size 


        Label:
                text:"ItemLookup"


<PreviewWindow>
        
        Image:
                id: previewimg
                pos_hint:{'top':1,'right':1}
                source: "../tmp/preview.jpg"
