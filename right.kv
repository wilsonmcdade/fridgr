# right.kv
# Right sidebar of fridgr app
# @author Wilson McDade wmcda.de

FloatLayout:
        size_hint:.1,1

        Button:
                text: "Preview"
                pos_hint: {'top':.6,'right':1}
                size_hint: 1,.2
                on_press: app.btnprs("preview")


        Button:
                text: "Print\nLabel "
                pos_hint: {'top':.4,'right':1}
                size_hint: 1,.2
                on_press: app.btnprs("printlabel")


        Image:
                pos_hint: {'top':.6,'right':1}
                source: 'images/logo_md.png'
                size: self.size
